@{
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}
<style>
        body{
            margin:0;
            
        }
        #main{
            width: 100vw;
        }
        .hero-image{
            background-image: url("https://cdn.shopify.com/s/files/1/0104/6662/3554/files/Home-Hero-2mobile_540x.jpg?v=1592438799") ;
            background-color: #cccccc; /* Used if the image is unavailable */
            background-position: center;/* Center the image */
            background-repeat: no-repeat;/* Do not repeat the image */
            height: 600px; /* You must set a specified height */
            position: relative;
            background-size: cover; /* Resize the background image to cover the entire container*/
        }
        .hero-text{
            align-items: center;
            background-color: #133e7a;
        
            clip-path: circle(100% at 0 50%);
            height: 100%;
            
            width: 50%;
            color: white;
            font-weight: bolder;
            text-align: center;
         
            /* position: absolute; */
            /* top: 50%;
            left: 25%; */
            /* transform: translate(0%, 0%); */
        }
        /* Tạo phần tử giả */
            .hero-text::before {
            content: " ";
            display: inline-block;
            height: 100%;
            width: 1%;
            vertical-align: middle;
        }
        .hero-text .test {
            display: inline-block;
            vertical-align: middle;
            width: 450px;
            padding: 10px;
            /* background: #003999; */
        }
        .button {
            background-color: black;
            border-radius: 50px;
            color: white;
            padding: 16px 32px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            transition-duration: 0.4s;
            cursor: pointer;
        }
        .button1 {
            background-color: white;
            color: #133e7a;
            font-size: x-large;
            font-weight: bold; 
            border: 2px solid black;
        }

        .button1:hover {
            border: 2px solid white;
            background-color: #133e7a;
            color: white;
        }

    </style>
<body>
    <div id="main">
        <div class="hero-image">
            <div class="hero-text">
                <div class="test">
                    <h1 style="font-size:40px;"> KHỞI ĐỘNG CHO ĐÊM NÓNG BỎNG...</h1>
                    <button class="button button1">MUA NGAY</button>
                </div>
            </div>
        </div>
    </div>
</body>
