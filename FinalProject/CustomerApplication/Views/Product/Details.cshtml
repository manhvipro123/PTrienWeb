
@{
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

@model CustomerApplication.Models.SanPham

<link rel="stylesheet" href="~/css/details.css">

<style>
/*body {
  background-color: white;
}*/

.wrapper {
  height: 100%;
  width: 654px;
  margin: 50px auto;
  border-radius: 7px 7px 7px 7px;
  /* VIA CSS MATIC https://goo.gl/cIbnS */
  -webkit-box-shadow: 0px 14px 32px 0px rgba(0, 0, 0, 0.15);
  -moz-box-shadow: 0px 14px 32px 0px rgba(0, 0, 0, 0.15);
  box-shadow: 0px 14px 32px 0px rgba(0, 0, 0, 0.15);
}

.product-img {
  float: left;
  height: 450px;
  width: 327px;
}

.product-img img {
  border-radius: 7px 0 0 7px;
}

.product-info {
  float: left;
  height: 450px;
  width: 327px;
  border-radius: 0 7px 10px 7px;
  background-color: #ffffff;
}

.product-text {
  height: 300px;
  width: 327px;
}

.product-text h1 {
  margin: 10 0 0 38px;
  padding-top: 20px;
  font-size: 34px;
  color: #005baa;
}

.product-text h1,
.product-price-btn p {
  font-family: 'One Night SansVN', sans-serif;
}

.product-text h2 {
  margin: 10 0 47px 20px;
  font-size: 18px;
  font-family: 'One Night SansVN', sans-serif;
  color: #2c2c2c;

}

.product-text p {
  height: 125px;
  margin: 10 0 0 38px;
  font-family: 'One Night SansVN', sans-serif;
  color: #8d8d8d;
  line-height: 1.7em;
  font-size: 15px;
  font-size:30px ;
  overflow: hidden;
  color: #005baa;
}

.product-price-btn {
  height: 103px;
  width: 327px;
  margin-top: 20px;
  position: relative;
}

.product-price-btn p {
  display: inline-block;
  position: absolute;
  top: -13px;
  height: 50px;
  font-family: 'Trocchi', serif;
  margin: 0 0 0 38px;
  font-size: 28px;
  font-weight: lighter;
  color: #474747;
}

span {
  display: inline-block;
  height: 50px;
  font-family: 'Suranna', serif;
  font-size: 34px;
}

.product-price-btn button {
  float: right;
  display: inline-block;
  height: 20px;
  width: 176px;
  margin: 0 40px 0 16px;
  box-sizing: border-box;
  border: transparent;
  border-radius: 60px;
  font-family: 'Raleway', sans-serif;
  font-size: 14px;
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 0.2em;
  color: #ffffff;
  /*background-color: #9cebd5;*/
  cursor: pointer;
  outline: none;
}

.product-price-btn button:hover {
  background-color: #79b0a1;
}


</style>

<body>
  <div class="wrapper">
        <div class="product-img">
          <img src="~/assets/images/@Model.HinhAnh">
        </div>
        <div class="product-info">
              <div class="product-text">
                <h1>@Model.TenSp</h1>
                <h2>@Model.MoTa </h2>
                <p><i class="fa fa-dollar" style="font-size:48px;color:#005baa"></i> @Model.Gia đ</p>
              </div>
              <div class="product-price-btn">
              @using (Html.BeginForm("AddToCart","Shopping", FormMethod.Post))
                {
                        @Html.HiddenFor(m=>m.MaSp)
                        @Html.TextBox("sl", "1")
                        <button style="margin-top: 15px;height:50px;width:130px;" type="submit" class="btn btn-primary">Buy now</button>
                }    
              </div>
        </div>
        
        <div class="table-users">
        <div class="header3"  style="background-color: rgba(0,91,170,255);
                                    color: white;
                                    box-sizing: border-box;
                                    border: transparent;
                                    border-radius: 60px;
                                    font-size: 1.5em;
                                    padding-top: 15px;
                                    padding-bottom: 15px;
                                    text-align: center;
                                    text-transform: uppercase;">ĐÁNH GIÁ</div>
        <table cellspacing="0">
          <thead>
              <tr>
             <th>Tên khách hàng</th>
             <th width="230">Comments</th>
             <th>Mức đánh giá</th>
             </tr>
          </thead>
          <tbody>
              @foreach (var danhgia in ViewBag.danhgias)
              {
          <tr>
             
             <td>@danhgia.MaKhNavigation.TenKh</td>
             <td>@danhgia.NhanXet</td>
             <td>@danhgia.MucDg / 5</td>
            
          </tr>
              }
          </tbody>
       </table>
        </div>
 
     </div>

  </div>

</body>

