@{
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

@model List<AdminApplication.Models.SanPham>
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Bảng Danh Sách Thông Tin Tất Cả Sản Phẩm</h1>


    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary" style="float:left;">Condumn- Gel</h6>
            <a href="~/admin/addproduct" class="btn btn-outline-primary" role="button" aria-pressed="true" style="float:right;">Thêm</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th style="vertical-align:middle;">Danh Mục</th>
                            @*<th style="vertical-align:middle;">Mã Sản Phẩm</th>*@
                            <th style="vertical-align:middle;">Tên Sản Phẩm</th>
                            <th style="vertical-align:middle;">Gói</th>
                            <th style="vertical-align:middle;">Số Lượng</th>
                            <th style="vertical-align:middle;">Đơn Giá</th>
                            <th style="vertical-align:middle;">Đặc điểm</th>
                            <th style="vertical-align:middle;">Mô Tả</th>
                            <th style="vertical-align:middle;">Trạng Thái</th>
                            <th style="vertical-align:middle;">Hình Ảnh</th>
                            <th style="vertical-align:middle;">Ngày Nhập</th>
                            <th style="vertical-align:middle;">Các Bài Đánh Giá</th>
                            <th style="vertical-align:middle;">Tùy Chỉnh</th>

                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th style="vertical-align:middle;">Danh Mục</th>
                            @*<th style="vertical-align:middle;">Mã Sản Phẩm</th>*@
                            <th style="vertical-align:middle;">Tên Sản Phẩm</th>
                            <th style="vertical-align:middle;">Gói</th>
                            <th style="vertical-align:middle;">Số Lượng</th>
                            <th style="vertical-align:middle;">Đơn Giá</th>
                            <th style="vertical-align:middle;">Đặc điểm</th>
                            <th style="vertical-align:middle;">Mô Tả</th>
                            <th style="vertical-align:middle;">Trạng Thái</th>
                            <th style="vertical-align:middle;">Hình Ảnh</th>
                            <th style="vertical-align:middle;">Ngày Nhập</th>
                            <th style="vertical-align:middle;">Các Bài Đánh Giá</th>
                            <th style="vertical-align:middle;">Tùy Chỉnh</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="vertical-align:middle;">@item.MaDmNavigation.TenDm</td>
                                @*  <td style="vertical-align:middle;">@item.MaSp</td>*@
                                <td style="vertical-align:middle;">@item.TenSp</td>
                                <td style="vertical-align:middle;">@item.Goi</td>
                                <td style="vertical-align:middle;">@item.SoLuong</td>
                                <td style="vertical-align:middle;">@item.Gia đ</td>
                                <td style="vertical-align:middle;">@item.DacDiem</td>
                                <td style="vertical-align:middle;">@item.MoTa</td>
                                <td style="vertical-align:middle;">@item.TrangThai</td>
                                <td style="vertical-align:middle;">@item.HinhAnh</td>
                                <td style="vertical-align:middle;">@item.NgayNhap</td>
                                <td style="vertical-align:middle;text-align:center;">
                                    @Html.ActionLink("Show","GetAllProductRates",new{id = item.MaSp})
                                </td>
                                <td style="vertical-align:middle;">
                                    @Html.ActionLink("Edit","EditProduct",new{id = item.MaSp})
                                    @Html.ActionLink("Delete","DeleteProduct",new{id = item.MaSp})
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>


