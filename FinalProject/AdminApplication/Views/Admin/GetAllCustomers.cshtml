@{
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

@model List<AdminApplication.Models.KhachHang>
 
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-2 text-gray-800">Bảng Danh Sách Thông Tin Tất Cả Khách Hàng</h1>
                  

                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary"></h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th style="vertical-align:middle;">Mã Khách Hàng</th>
                                            <th style="vertical-align:middle;">Tên Khách Hàng</th>
                                            <th style="vertical-align:middle;">Số Điện Thoại</th>
                                            <th style="vertical-align:middle;">Địa Chỉ</th>
                                            <th style="vertical-align:middle;">Mã Tài Khoản</th>
                                            <th style="vertical-align:middle;">Số Bài Đánh Giá</th>
                                            <th style="vertical-align:middle;">Tùy Chỉnh</th>

                                            @*<th style="vertical-align:middle;">Tài Khoản</th>
                                            <th style="vertical-align:middle;">Mật Khẩu</th>
                                            <th style="vertical-align:middle;">Tùy Chỉnh</th>*@
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th style="vertical-align:middle;">Mã Khách Hàng</th>
                                            <th style="vertical-align:middle;">Tên Khách Hàng</th>
                                            <th style="vertical-align:middle;">Số Điện Thoại</th>
                                            <th style="vertical-align:middle;">Địa Chỉ</th>
                                            <th style="vertical-align:middle;">Mã Tài Khoản</th>
                                            <th style="vertical-align:middle;">Các Bài Đánh Giá</th>
                                            <th style="vertical-align:middle;">Tùy Chỉnh</th>

                                            @*
                                            <th style="vertical-align:middle;">Tài Khoản</th>
                                            <th style="vertical-align:middle;">Mật Khẩu</th>
                                            <th style="vertical-align:middle;">Tùy Chỉnh</th>*@
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td style="vertical-align:middle;">@item.MaKh</td>
                                                <td style="vertical-align:middle;">@item.TenKh</td>
                                                <td style="vertical-align:middle;">@item.Sdt</td>
                                                <td style="vertical-align:middle;">@item.DiaChiKh</td>
                                                <td style="vertical-align:middle;"> 
                                                    @item.UserId 
                                                    @Html.ActionLink("Detail","GetUserAccount",new{id = item.UserId},new{@style="float:right;"})
                                                </td>
                                                <td style="vertical-align:middle;text-align:center;"> 
                                                    @Html.ActionLink("Show","GetAllCustomerRates",new{id = item.MaKh})
                                                </td>
                                                <td style="vertical-align:middle;">
                                                     @Html.ActionLink("Edit","EditCustomer",new{id = item.MaKh})
                                                     @Html.ActionLink("Delete","DeleteCustomer",new{cId = item.MaKh, uId = item.UserId})
                                                </td>
@*
                                                <td style="vertical-align:middle;">@item.User.Email</td>
                                                <td style="vertical-align:middle;">@item.User.Password</td>
                                                <td style="vertical-align:middle;">
                                                     @Html.ActionLink("Edit","EditUser",new{id = item.User.UserId})
                                                     @Html.ActionLink("Delete","DeleteUser",new{id = item.User.UserId})
                                                </td>*@
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
 


      