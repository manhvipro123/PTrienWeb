@{
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

@model List<AdminApplication.Models.DanhGia>

                <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-2 text-gray-800">Bảng Danh Sách Thông Tin Các Bài Đánh Giá Của Sản Phẩm @ViewBag.prodID </h1>
                  

                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary" style="float:left;"></h6>
                            <a href="~/admin/getallproducts" class="btn btn-outline-danger" role="button" aria-pressed="true" style="float:right;">Quay lại</a>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th style="vertical-align:middle;">Mã Sản Phẩm</th>
                                            <th style="vertical-align:middle;">Mã Khách Hàng</th>
                                            <th style="vertical-align:middle;">Mã Đánh Giá</th>                                            
                                            <th style="vertical-align:middle;">Mức Đánh Giá</th>
                                            <th style="vertical-align:middle;">Nhận xét</th>
                                            <th style="vertical-align:middle;">Tùy Chỉnh</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th style="vertical-align:middle;">Mã Sản Phẩm</th>
                                            <th style="vertical-align:middle;">Mã Khách Hàng</th>
                                            <th style="vertical-align:middle;">Mã Đánh Giá</th>                                           
                                            <th style="vertical-align:middle;">Mức Đánh Giá</th>
                                            <th style="vertical-align:middle;">Nhận xét</th>
                                            <th style="vertical-align:middle;">Tùy Chỉnh</th>
                                      
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        @foreach(var item in Model)
                                        {
                                          <tr>
                                             <td style="vertical-align:middle;">@item.MaSp</td>
                                             <td style="vertical-align:middle;">@item.MaKh</td>
                                             <td style="vertical-align:middle;">@item.MaDg</td>     
                                             <td style="vertical-align:middle;">@item.MucDg</td>
                                             <td style="vertical-align:middle;">@item.NhanXet</td>                                   
                                             <td style="vertical-align:middle;">
                                                  @Html.ActionLink("Delete","DeleteRatingByP",new{id1 = item.MaDg, id2 = item.MaSp})
                                             </td>
                                           </tr>   
                                        }
                                 
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
 


      