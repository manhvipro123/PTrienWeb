@{
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

@model List<AdminApplication.Models.ChiTietDonHang>
@{
    var billId = Model[0].MaDh;
}
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Bảng Thông Tin Chi Tiết Đơn Hàng @billId </h1>


    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary" style="float:left;"></h6>
            <a href="~/admin/getallbills" class="btn btn-outline-danger" role="button" aria-pressed="true" style="float:right;">Quay lại</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                           @* <th style="vertical-align:middle;">Mã Chi Tiết</th>*@
                            <th style="vertical-align:middle;">Mã Đơn Hàng</th>
                            <th style="vertical-align:middle;">Tên Sản Phẩm</th>
                            <th style="vertical-align:middle;">Số Lượng</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                           @* <th style="vertical-align:middle;">Mã Chi Tiết</th>*@
                            <th style="vertical-align:middle;">Mã Đơn Hàng</th>
                            <th style="vertical-align:middle;">Tên Sản Phẩm</th>
                            <th style="vertical-align:middle;">Số Lượng</th>

                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                              @*  <td style="vertical-align:middle;">@item.MaCtdh</td>*@
                                <td style="vertical-align:middle;">@item.MaDh</td>
                                <td style="vertical-align:middle;">@item.MaSpNavigation.TenSp</td>
                                <td style="vertical-align:middle;">@item.SoLuong</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>


