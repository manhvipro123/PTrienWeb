@{
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

@model List<AdminApplication.Models.DonHang>
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Bảng Danh Sách Thông Tin Tất Cả Đơn Hàng</h1>


    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary" style="float:left;"></h6>

        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            @*<th style="vertical-align:middle;">Mã Đơn Hàng</th>*@
                            <th style="vertical-align:middle;">Mã Khách Hàng</th>
                            <th style="vertical-align:middle;">Địa Chỉ Giao</th>
                            <th style="vertical-align:middle;">Ngày Lập</th>
                            <th style="vertical-align:middle;">Ngày Giao</th>
                            <th style="vertical-align:middle;">Ngày Nhận</th>
                            <th style="vertical-align:middle;">Trạng Thái Đơn Hàng</th>
                            <th style="vertical-align:middle;">Phương Thức Thanh Toán</th>
                            <th style="vertical-align:middle;">Ngân Hàng Nhận</th>
                            <th style="vertical-align:middle;">Số Tài Khoản</th>
                            <th style="vertical-align:middle;">Chi Tiết</th>
                            <th style="vertical-align:middle;">Tổng Tiền</th>
                            <th style="vertical-align:middle;">Tùy Chỉnh</th>

                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            @*<th style="vertical-align:middle;">Mã Đơn Hàng</th>*@
                            <th style="vertical-align:middle;">Mã Khách Hàng</th>
                            <th style="vertical-align:middle;">Địa Chỉ Giao</th>
                            <th style="vertical-align:middle;">Ngày Lập</th>
                            <th style="vertical-align:middle;">Ngày Giao</th>
                            <th style="vertical-align:middle;">Ngày Nhận</th>
                            <th style="vertical-align:middle;">Trạng Thái Đơn Hàng</th>
                            <th style="vertical-align:middle;">Phương Thức Thanh Toán</th>
                            <th style="vertical-align:middle;">Ngân Hàng Nhận</th>
                            <th style="vertical-align:middle;">Số Tài Khoản</th>
                            <th style="vertical-align:middle;">Chi Tiết</th>
                            <th style="vertical-align:middle;">Tổng Tiền</th>
                            <th style="vertical-align:middle;">Tùy Chỉnh</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
@*                                <td style="vertical-align:middle;">@item.MaDh</td>
*@                                <td style="vertical-align:middle;">@item.MaKh</td>
                                <td style="vertical-align:middle;">@item.DiaChiGiao</td>
                                <td style="vertical-align:middle;">@item.NgayLap</td>
                                <td style="vertical-align:middle;">@item.NgayGiao</td>
                                <td style="vertical-align:middle;">@item.NgayNhan</td>
                                <td style="vertical-align:middle;">@item.TrangThaiDh</td>
                                <td style="vertical-align:middle;">@item.PhuongThucTt</td>
                                <td style="vertical-align:middle;">@item.NganHangNhan</td>
                                <td style="vertical-align:middle;">@item.SoThe</td>
                                <td style="vertical-align:middle;text-align:center;">
                                    @Html.ActionLink("View","GetBillDetail",new{id = item.MaDh})
                                </td>
                                <td style="vertical-align:middle;">@item.TongTien</td>

                                <td style="vertical-align:middle;">
                                    @Html.ActionLink("Edit","EditBill",new{id = item.MaDh})

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>


