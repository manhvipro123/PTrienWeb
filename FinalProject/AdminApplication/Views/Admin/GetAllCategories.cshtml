@{
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

@model List<AdminApplication.Models.DanhMuc>
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-2 text-gray-800">Infomation Table</h1>
                  

                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">All Categories</h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th style="vertical-align:middle;">Mã Danh Mục</th>
                                            <th style="vertical-align:middle;">Tên Danh Mục</th>
                                            <th style="vertical-align:middle;">Tùy Chỉnh</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th style="vertical-align:middle;">Mã Danh Mục</th>
                                            <th style="vertical-align:middle;">Tên Danh Mục</th>
                                            <th style="vertical-align:middle;">Tùy Chỉnh</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td style="vertical-align:middle;">@item.MaDm</td>
                                                <td style="vertical-align:middle;">@item.TenDm</td>
                                                <td style="vertical-align:middle;">
                                                     @Html.ActionLink("Edit","EditCategory",new{id = item.MaDm})
                                                     @Html.ActionLink("Delete","DeleteCategory",new{id = item.MaDm})
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
 


      