@{
    Layout = "~/Views/Shared/_homeLayout.cshtml";
}
@model AdminApplication.Models.Admin
@if (ViewBag.Message != null)
{
    <script type="text/javascript">
        window.onload = function () {
            alert("@ViewBag.Message");
        };
    </script>
}
<div class="container">

    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                <div class="col-lg-7">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
                        </div>
                        @using (Html.BeginForm("SaveAdmin", "Home", FormMethod.Post, new { @class = "user" }))
                        {
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Name,  new { @class = "form-control form-control-user", @id = "exampleFirstName", @placeholder = "Name" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Email,  new { @class = "form-control form-control-user", @id = "exampleInputEmail", @placeholder = "Email Address" })
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    @Html.TextBoxFor(m => m.Password,  new { @class = "form-control form-control-user", @id = "exampleInputPassword", @placeholder = "Password" ,@type = "password"})
                                </div>
                                <div class="col-sm-6">
                                    <input name="rp_pass" type="password" class="form-control form-control-user"
                                       id="exampleRepeatPassword" placeholder="Repeat Password">
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary btn-user btn-block">
                                Register Account
                            </button>
                        }
                        <hr>
                        <div class="text-center">
                            <a class="small" href="~/home/forgotpassword">Forgot Password?</a>
                        </div>
                        <div class="text-center">
                            <a class="small" href="~/home/login">Already have an account? Login!</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
